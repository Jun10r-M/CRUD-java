<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>guardarPersona</servlet-name>
        <servlet-class>controlador.guardarPersona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>actualizarPersona</servlet-name>
        <servlet-class>controlador.actualizarPersona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>borrarPersona</servlet-name>
        <servlet-class>controlador.borrarPersona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>actualizarProducto</servlet-name>
        <servlet-class>controlador.actualizarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>borrarProducto</servlet-name>
        <servlet-class>controlador.borrarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>guardarProducto</servlet-name>
        <servlet-class>controlador.guardarProducto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>guardarPersona</servlet-name>
        <url-pattern>/guardarPersona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actualizarPersona</servlet-name>
        <url-pattern>/actualizarPersona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>borrarPersona</servlet-name>
        <url-pattern>/borrarPersona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actualizarProducto</servlet-name>
        <url-pattern>/actualizarProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>borrarProducto</servlet-name>
        <url-pattern>/borrarProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>guardarProducto</servlet-name>
        <url-pattern>/guardarProducto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
